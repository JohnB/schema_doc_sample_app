- form_for(@loan) do |f|
  
  - if @loan.errors.any?
    #errorExplanation
      %h2= t('activerecord.errors.messages.loan.invalid_record')
      %ul
      - @loan.errors.full_messages.each do |msg|
        %li= msg
  .field
    = f.label :toy_id
    %br
    = f.text_field :toy_id
  .field
    = f.label :child_id
    %br
    = f.text_field :child_id
  .field
    = f.label :loaned_at
    %br
    = f.datetime_select :loaned_at
  .field
    = f.label :expected_back_at
    %br
    = f.datetime_select :expected_back_at

  .actions
    = f.submit I18n.t('submit')
