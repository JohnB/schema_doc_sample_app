- form_for(@parent) do |f|
  
  - if @parent.errors.any?
    #errorExplanation
      %h2= t('activerecord.errors.messages.parent.invalid_record')
      %ul
      - @parent.errors.full_messages.each do |msg|
        %li= msg
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :email
    %br
    = f.text_field :email

  .actions
    = f.submit I18n.t('submit')
