- form_for(@child) do |f|
  
  - if @child.errors.any?
    #errorExplanation
      %h2= t('activerecord.errors.messages.child.invalid_record')
      %ul
      - @child.errors.full_messages.each do |msg|
        %li= msg
  .field
    = f.label :parent_id
    %br
    = f.select :parent_id, Parent.all.collect {|c| [c.name, c.id]}
  .field
    = f.label :name
    %br
    = f.text_field :name

  .actions
    = f.submit I18n.t('submit')
